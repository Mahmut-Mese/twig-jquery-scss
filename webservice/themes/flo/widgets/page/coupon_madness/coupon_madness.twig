<script>
	domReadyCallbacks.push(function() {		
		var $categories = $('.cm-categories');
		var $categoriesLink = $categories.find('a');

		if ($categoriesLink.length) {
			$categories.show();
			$('.cm-campaigns').show();
		}

		$categoriesLink.on('click', function (e) {
			e.preventDefault();

			var $self = $(this);
			var $parent = $self.parent();
			var index = $parent.index() + 1;

			$('.cm-campaign-tabs').hide().filter('.cm-campaign-tab-' + index).fadeIn();

			$self.closest('ul').find('li').removeClass('active');
			$parent.addClass('active');
		}).first().trigger('click');

		$('.cm-scroller').on('click', function (e) {
			e.preventDefault();

			$('html, body').animate({
				scrollTop: $('.cm-coupons').offset().top
			}, 250);
		})
	});
</script>