<div class="main-slider">
    {% for spotlight in spotlights %}
        <div class="slide">
            <div class="image-holder">
				<a href="{{ spotlight.link }}" data-spotlight-id="{{ spotlight.spotlight_id }}" class="spotlightItem">
                    {{ img('lazyloading/blank.png', '', { style: 'opacity: 0;', cdn: 'general' }, spotlight.image_desktop, 'data-lazy') }}
                </a>
            </div>
        </div>
    {% endfor %}
</div>

<style>
	.main-slider .image-holder {
		position: relative;
		padding-bottom: 21.875%;
	}

	.main-slider .image-holder img {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		
		margin: auto;
		width: auto;
		height: auto;

		max-width: 100%;
		max-height: 100%;
	}
</style>

{{ widget('datalayer', 'spotlight', {layerData: {spotlights: spotlights}}) }}
