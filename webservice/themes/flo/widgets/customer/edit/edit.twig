<h2 class="form-title">Hesap Bilgileri</h2>
<form id="customer-edit-form" class="account-form">
    <div class="row medium-gutter">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Ad :</label>
                <input type="text" class="form-control" name="firstname" value="{{ customer.firstname }}">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Soyad :</label>
                <input type="text" class="form-control" name="lastname" value="{{ customer.lastname }}">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>E-Mail :</label>
        <input type="text" class="form-control  input_lowercase" readonly name="email" value="{{ customer.email }}">
    </div>
    <div class="row medium-gutter">
        <div class="col-xl-6 col-lg-5 col-sm-6">
            <div class="form-group">
                <label>Cep Telefonu :</label>
                <input type="tel" class="form-control inputmask"
                       name="phone"
                       data-inputmask-removeMaskOnSubmit="false"
                       data-inputmask="'mask': '0(599)-9999999'"
                       value="{{ customer.phone_mask }}">


            </div>
        </div>
    </div>
    <div class="form-group d-flex align-items-center">
        <label class="mr-3">Cinsiyet :</label>
        <label class="flo-radio mr-3">
            <input type="radio" name="gender" value="1" {{ customer.gender == 1 ? "checked" : "" }}>
            <i></i>
            Erkek
        </label>
        <label class="flo-radio mr-3">
            <input type="radio" name="gender" value="2" {{ customer.gender == 2 ? "checked" : "" }}>
            <i></i>
            Kadın
        </label>
    </div>
    <div class="form-group">
        {% for aggrement in aggrements %}
            <label class="flo-checkbox color-inherit mt-3 fs-12">
                {{ aggrement.front_text|raw }}
                <input type="checkbox" name="{{ aggrement.alias }}" id="{{ aggrement.aggrement_id }}" value="{{ aggrement.aggrement_id }}"
                       checked>
                <span><i class="fa fa-check"></i></span>
            </label>
        {% endfor %}
    </div>
    <button type="submit" id="btn-customer-save" class="btn outline-gray">Güncelle <i
                class="svg-refresh svg-refresh-dims"></i></button>
</form>




