<div class="container">
	<h1 class="register-title">{{ 'ÜYE GİRİŞİ' | translate }}</h1>
	<form id="customer-login-form" action="" class="register login-form" novalidate="novalidate"  method="POST">
		<div class="register-box">
			<h2 class="register-box-title">{{ 'KAYITLI KULLANICI' }}</h2>
		
			<div class="form-group"> 
				<div class="row">
					<div class="col-sm-4">
						<label> <span>{{ 'E-posta Adresiniz' | translate}}<sup>*</sup></span></label>
					</div>
					<div class="col-sm-8">
						<input type="email" name="username" value="" class="form-control"/>
					</div>
				</div>
			</div>

			<div class="form-group"> 
				<div class="row">
					<div class="col-sm-4">
						<label> <span>{{ 'Şifreniz' | translate}}<sup>*</sup></span></label>
					</div>
					<div class="col-sm-8">
						<input type="password" name="password" value="" class="form-control" />
					</div>
				</div>
			</div>

			{% if login.active == true %}
				<div class="form-group">
					<div class="row">
						<div class="col-sm-8 col-sm-offset-4">
								<script src='https://www.google.com/recaptcha/api.js?hl=tr'></script>
								<div class="text-right mb-3">
									<div class="g-recaptcha" data-sitekey="{{ login.site_key }}"></div>
								</div>
						</div>
					</div>
				</div>
			{% endif %}


			<div class="form-group text-center"> 
				<a href="/customer/password-forget" class="btn btn-link register-back"> {{ 'Şifremi Unuttum' | translate }} </a>
			</div>

			<div class="register-actions clearfix">
				<div class="pull-left">
					<a href="javascript:;" class="btn btn-facebook facebook-login"> <i class="fab fa-facebook-f"></i> {{ 'Facebook İle Giriş Yap' | translate }}</a>
				</div>

				<div class="pull-right">
					<button class="btn btn-primary">{{ 'GİRİŞ YAP' | translate }}</button>
				</div>
			</div>
		</div>
		<div class="mt-3 text-center">
			<a href="/customer/register" class="customer-login-register-link">Henüz Nine West Hesabın Yoksa Hemen Üye Ol</a>
		</div>
	</form>
</div>
{{ widget('social', 'facebook') }}
