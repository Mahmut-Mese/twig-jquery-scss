
<div class="page searchnone">
    <div class="container-fluid">
        <div class="page-content">
            <div class="whitepage">
                <div class="title">{{ 'YENİ ŞİFRE' | translate }}</div>
                <div class="form online">
                    <form action="#" id="customer-reset-form">
                        <input type="hidden" name="token" value="{{ customer.token }}" />
                        <input type="hidden" name="email" value="{{ customer.email }}" />
                        <div class="form-group">
                            <input name="password" type="password" value="" class="validate[required]" placeholder="{{ 'Yeni Şifre' | translate }}">
                        </div>
                        <div class="form-group">
                            <input name="password_confirmation" type="password" value="" class="validate[required]" placeholder="{{ 'Yeni Şifre Tekrar' | translate }}">
                        </div>
                        <div class="submit">
                            <input type="submit" value="{{ 'GÖNDER' | translate }}" id="btn-reset-password-save">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>