<div class="page">
    <div class="container-fluid">
        <div class="page-content">
            <div class="whitepage">
                <div class="title orange">{{ 'HESABIM / FAVORİ LİSTEM' | translate }}</div>
                <div class="content">
                    <div class="my-account-list">
                        <div class="siparis-box">
                            <div class="fav">
                                {% if products is empty %}
                                    <p style="text-align: center">{{ 'Favorilerinize eklenen ürün bulunmamaktadır.' | translate }}</p>
                                {% endif %}
                                <table id="wishlist-items">
                                    {% for product in products %}
                                        <tr>
                                            <td>
                                                <a href="{{ product.url }}" class="favourite" data-product-id="{{ product.id }}">
                                                    <div class="images">
                                                        <img src="{{ product.image|resize('88x87') }}" alt="">
                                                    </div>
                                                </a>
                                            </td>
                                            <td style="width:100%">
                                                <div class="text">
                                                    <span>{{ product.manufacturer }}</span>
                                                    <a href="{{ product.url }}" class="favourite" data-product-id="{{ product.id }}">
                                                        <p>{{ product.name }}</p>
                                                    </a>
                                                    <div class="money">
                                                        {% if product.special_price %}
                                                            <i class="prev">{{ product.price|price }}</i>
                                                        {% endif %}
                                                        <i class="next">{{ product|price }}</i>
                                                    </div>
                                                    <button class="remove-wishlist">
                                                        <img src="/pub/assets/instreet/images/cop.png" alt="" data-product-id = "{{ product.id }}" data-sku="{{ product.sku }}">
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ widget('datalayer', 'favourite', {layerData: {productList: products}} ) }}
