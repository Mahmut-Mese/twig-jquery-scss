<div class="page">
    <div class="container-fluid">
        <div class="page-content">
            <div class="whitepage">
                <div class="title">{{ 'YARDIM TALEPLERİM' | translate }}</div>
                <div class="content">
                    <div class="my-account-list">
                        <div class="siparis-box">
                            <div class="item">
                                <div class="help-desk-item">
                                    {% for row in ticket.list %}

                                    <div class="items">
                                        <div class="cnt">
                                            <ul>
                                                <li><b>{{ 'Talep No' | translate }} <em>:</em></b> <a href="/ticket/detail?ticket_id={{ row.ticketId }}">{{ row.screenId }}</a></li>
                                                <li><b>{{ 'Departman' | translate }} <em>:</em></b> {{ row.department }}</li>
                                                <li><b>{{ 'Başlık' | translate }}<em>:</em></b> {{ row.title }}</li>
                                                <li><b>{{ 'Konu' | translate }}<em>:</em></b> {{ row.message }}</li>
                                                <li><b>{{ 'Yanıt' | translate }}<em>:</em></b> <a href="/ticket/detail?ticket_id={{ row.ticketId }}" >{{ row.yanit_sayisi }}</a> </li>
                                                <li><b>{{ 'Durum' | translate }}<em>:</em></b> {{ row.statusLabel }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <div class="buttons">
                                        <a class="mc-md-12" href="/ticket/new">{{ 'TALEP OLUŞTUR' | translate }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
