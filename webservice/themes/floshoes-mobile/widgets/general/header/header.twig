                    <li class="other">
                        <a class="customer-logout" href="#">{{ 'ÇIKIŞ' | translate }}</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>

<header class="site-head detail-header">
    <div class="container-fluid">
        <div class="top">
            <div class="head-top">
                <div class="mobile-btn">
                    <button type="button" class="navbar-toggle" onclick="javascript: mobileMenuOpen(this)">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="logo">
                    <a href="/">
                        <img src="/pub/assets/floshoes/images/logo.png" alt="Floshoes">
                    </a>
                </div>
                <div id="commerce-mini-cart-mobile" class="basket">
                    <ul>
                        <li>
                            <a class="mobil-minicart-background" href="javascript:void(0);">
                                <i class="cart-count" style="display: none;"></i>
                            </a>
                            <div class="list" id="mini-cart">

                                {{ widget('basket', 'mini_cart') }}

                                <div class="more">
                                    <a href="{{ basket_base_url() }}/basket">{{ 'SEPETE GİT' | translate }}</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% if menubar == 'open' %}
            <div class="menu">
                <div class="menulist ">
                    <ul class="menuslide">
                        <li><a href="/brands">{{ 'MARKALAR' | translate }}</a></li>
                        <li><a href="/man">{{ 'ERKEK' | translate }}</a></li>
                        <li><a href="/women">{{ 'KADIN' | translate }}</a></li>
                        <li><a href="/kids">{{ 'ÇOCUK' | translate }}</a></li>
                        <li><a href="/clothing">{{ 'GİYİM' | translate }}</a></li>
                        <li><a href="/accessory">{{ 'AKSESUAR' | translate }}</a></li>
                        <li><a href="/outlet">{{ 'OUTLET' | translate }} </a></li>
                        <li><a href="/store">{{ 'MAĞAZALAR' | translate }}</a></li>
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
</header>
