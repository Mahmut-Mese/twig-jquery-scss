            <div class="top logged-out">
                <ul>
                    <li><a href="/customer/register">{{ 'ÜYE OL' | translate }}</a></li>
                    <li><a href="/customer/login">{{ 'GİRİŞ YAP' | translate }}</a></li>
                </ul>
            </div>

        <nav>
            <ul>
                <li class="other my-account logged-in">
                    <a href="/customer/myaccount">{{ 'HESABIM' | translate }}</a>
                </li>
                <li><a href="/man"> <img src="/pub/assets/instreet/mobile/images/erkek-ico.png" alt="{{ 'ERKEK' | translate }} " title="{{ 'ERKEK' | translate }} ">{{ 'ERKEK' | translate }} </a></li>
                <li><a href="/women"> <img src="/pub/assets/instreet/mobile/images/kadin-ico.png" alt="{{ 'KADIN' | translate }} " title="{{ 'KADIN' | translate }} "> {{ 'KADIN' | translate }} </a></li>
                <li><a href="/kids"> <img src="/pub/assets/instreet/mobile/images/cocuk-ico.png" alt="{{ 'ÇOCUK' | translate }} " title="{{ 'ÇOCUK' | translate }} "> {{ 'ÇOCUK' | translate }} </a></li>
                <li><a href="/clothing"> <img src="/pub/assets/instreet/mobile/images/giyim-ico.png" alt="{{ 'GİYİM' | translate }} " title="{{ 'GİYİM' | translate }} ">{{ 'GİYİM' | translate }}  </a></li>
                <li><a href="/accessory"> <img src="/pub/assets/instreet/mobile/images/aksesuar-ico.png" alt="{{ 'AKSESUAR' | translate }} " title="{{ 'AKSESUAR' | translate }} ">{{ 'AKSESUAR' | translate }}  </a></li>
                <li class="other"><a href="/store" alt="{{ 'MAĞAZA BUL' | translate }} " title="{{ 'MAĞAZA BUL' | translate }} ">{{ 'MAĞAZA BUL' | translate }}</a></li>
