<div class="account-page-wrapper">
    <div class="page-title-bar">
        <a href="/customer/myaccount" class="go-back-link"><i class="svg-slide-arrow-left svg-slide-arrow-left-dims"></i></a>
        <h1>HESAP BİLGİLERİM</h1>
    </div>
    <div class="bg-white pt-3 pb-3 mb-2">
        <div class="container">
            <h2>HESAP BİLGİLERİ</h2>
            <form method="POST" id="customer-edit-form" class="account-form">
                <div class="row small-gutter">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Ad :</label>
                            <input type="text" class="form-control" name="firstname" value="{{ customer.firstname }}">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Soyad :</label>
                            <input type="text" class="form-control" name="lastname" value="{{ customer.lastname }}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>E-Mail :</label>
                    <input type="text" class="form-control" name="email" readonly
                           value="{{ customer.email }}">
                </div>
                <div class="form-group">
                    <label>Cep Telefonu :</label>
                    <input type="tel" class="form-control inputmask"
                           name="phone"
                           data-inputmask-removeMaskOnSubmit="false"
                           data-inputmask="'mask': '0(599)-9999999'"
                           value="{{ customer.phone_mobile_mask }}">
                </div>
                <div class="row medium-gutter">

                    <div class="col-6">
                        <label class="mb-3">Cinsiyet :</label>
                        <div class="form-group d-flex align-items-center">
                            <label class="flo-radio mr-3">
                                <input name="gender" type="radio" value="1" name="gender" {{ customer.gender == 1 ? "checked" : "" }}>
                                <i></i>
                                Erkek
                            </label>
                            <label class="flo-radio mr-3">
                                <input name="gender" type="radio" value="2" name="gender" {{ customer.gender == 2 ? "checked" : "" }}>
                                <i></i>
                                Kadın
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {% for aggrement in aggrements %}
                        <label class="flo-checkbox color-inherit mt-3 fs-12">
                            {{ aggrement.front_text|raw }}
                            <input type="checkbox" name="{{ aggrement.alias }}" id="{{ aggrement.aggrement_id }}" value="{{ aggrement.aggrement_id }}" checked>
                            <span><i class="fa fa-check"></i></span>
                        </label>
                    {% endfor %}
                </div>
                <button type="submit" id="btn-customer-save" class="btn outline-gray">Güncelle <i class="svg-refresh svg-refresh-dims"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="bg-white pt-3 pb-3">
        {{ widget('customer','password_edit') }}
    </div>
    <div class="bg-white pt-3 pb-3">
        {{ widget('customer','savedcard') }}
    </div>
    <!-- New Card Modal -->

</div>