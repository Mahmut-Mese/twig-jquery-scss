<header class="site-head">
    <div class="top-text">
        {{ 'TÜM TÜRKİYE’YE KARGO BEDAVA FIRSATINI KAÇIRMA' |translate }}
    </div>
    <div class="container-fluid">
        <div class="top">
            <div class="mobile-btn">
                <button type="button" class="navbar-toggle" onclick="javascript: mobileMenuOpen(this)">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="logo">
                <a href="/"><img src="/pub/assets/instreet/images/logo.png" alt="InStreet"></a>
            </div>
            <div class="search">
                <form action="/search">
                    <div class="form-group">
                        <input type="text" name="q" value="{{ search_query }}" autocomplete="off">

                        {% if search_query == '' %}
                            <p>42 Numara Kinetix</p>
                        {% endif %}
                    </div>
                    <div class="submit">
                        <input type="submit">
                    </div>
                </form>
            </div>
            <div class="menu-button">
                <ul>
                    <li>
                        <a href="/customer/register">{{ 'ÜYE OL' |translate }}</a>
                    </li>
                    <li>
                        <a href="/customer/login">{{ 'GİRİŞ YAP' |translate }}</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="menu">
            <div class="menulist">
                <ul class="menuslide">
                    {%  for menu in menus %}
                    <li>
                        <a href="{{ menu.data_type }}">
                            {{ menu.title }}
                            {% if menu.sub_menus %}
                                <ul class="submenu">
                                {% for sub_menu in menu.sub_menus %}
                                    <li class="sub">
                                        <ul>
                                            <li class="head">
                                                {{ sub_menu.title }}
                                                <ul>
                                                    {% for sub_sub_menu in sub_menu.sub_menus %}
                                                        <li>
                                                            <a href="{{ sub_sub_menu.data_type }}">{{ sub_sub_menu.title }} {{ sub_sub_menu.data_type }}</a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        </ul>
                                    </li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</header>
