<div class="cm lazy">
	<div class="cm-spotlight">
		<img src="/pub/assets/flo/coupon_madness/IS/muhtesem-indirim.gif" />
	</div>

	<div class="container">
		<div class="cm-campaigns">

			{% set aliases = [banner_1_tum_kampanyalar] %}

			{% set index = 1 %}
			{% for campaigns in aliases %}
				{% if campaigns | length %}
					<div class="cm-campaign-tabs cm-campaign-tab-{{index}}">
					{% for banner in campaigns %}
						{% set surprise = false %}
						{% if date(banner.start_date) > date() %}
							{% set surprise = true %}
						{% endif %}

						<div class="cm-campaign-item {% if surprise %}{% endif %}">
							<a href="{{ banner.link }}">
								<div class="cm-campaign-image">
									{% if surprise %}
										<img src="/pub/assets/flo/coupon_madness/campaign-surprise.png">
										<div class="cm-campaign-image-title">SÜRPRİZ FIRSAT</div>
									{% else %}
										{{ img(banner.image_desktop, '', {  class:'w-100', cdn: 'general' }) }}
									{% endif %}
								</div>
								<div class="cm-campaign-info">
									<div class="row">
										<div class="col-sm-7">
											<span class="cm-campaign-title">
												{% if surprise %}
													{{ 'Takipte Kalan Herkes Stoklar Tükenmeden Fırsatı Yakalıyor.' | translate }}
												{% else %}
													{{ banner.title }}
												{% endif %}
											</span>
										</div>
										<div class="col-sm-5 text-right">
											{% if surprise %}
												<span class="cm-campaign-timer"><span class="cm-campaign-timer-icon"></span> 03:15:22</span>
											{% endif %}
										</div>
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
					</div>
					{% set index = index + 1 %}
				{% endif %}
			{% endfor %}
		</div>
	</div>

	<div class="cm-coupons">
		<div class="cm-coupons-title">
			<img src="/pub/assets/flo/coupon_madness/IS/coupons-title.png" alt="Kupon Çılgınlığı"/>
		</div>

		<ul class="cm-coupon-list">
			{% for campaign in campaigns %}
				{% if customer_campaigns[campaign.rule_id] %}
					<li class="cm-coupon-used"></li>
				{% else %}
					<li class="cm-coupon-item">
						<a href="#" data-rule="{{ campaign.rule_id }}" class="cm-set-coupon"
							data-price="{% if campaign.yuzde %}%{% endif %}{{ campaign.discount_amount | number_format }}"
							data-ispercent="{{ campaign.yuzde }}"
							data-description="{{ campaign.description }}"
						>
							<span class="cm-coupon-price">
								{% if campaign.yuzde %}
									%{{ campaign.discount_amount | number_format }}
								{% else %}
									{{ campaign.discount_amount | number_format }} TL
								{% endif %}
							</span>
							<span class="cm-coupon-description">{{ campaign.name }}</span>
						</a>
					</li>
				{% endif %}

				{% if (loop.index) % 3 == 0 %}
					<li class="cm-coupon-newline"></li>
				{% endif %}
			{% endfor %}
		</ul>

		<h1 class="cm-coupons-title text-center">Muhteşem İndirim Günleri</h1>
		<div class="cm-coupons-description">
			Muhteşem İndirim Kuponları 1 - 12 Kasım 2019 kazanılabilir. Kazanılan kuponlar 8-12 Kasım 2019 tarihleri arasında kullanılabilir.
		</div>
