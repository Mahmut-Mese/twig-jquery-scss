<div class="blogger lazy">
    <div class="container">
        <div class="text-center mb-4">
            <img src="/pub/media/lazyloading/blank.png" data-src="/pub/assets/flo/img/blogger-logo.jpg">
        </div>
        <div class="row">
            {% for post in blog_posts %}
            <div class="col-sm-4">
                <a href="{{ post.url }}" class="blog-box">
                    <img src="/pub/media/lazyloading/blank.png" data-src="{{ post.image }}" class="w-100">
                    <h5>{{ post.title }}</h5>
                </a>
            </div>
            {% endfor %}
        </div>
        <div class="text-center">
            <a href="/" class="btn btn-dark">{{ 'FLO BLOGGER' | translate }}</a>
        </div>
    </div>
</div>