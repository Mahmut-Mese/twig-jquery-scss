<div class="whitepage">
    <div class="title orange">{{ 'YENİ ŞİFRE' | translate }}</div>
    <div class="content hesap">
        <div class="my-account-list">
            <div class="form adress-ose">
                <form method="POST" id="customer-reset-form">
                    <input type="hidden" name="token" value="{{ customer.token }}" />
                    <input type="hidden" name="email" value="{{ customer.email }}" />
                    <div id="success-error"></div>
                    <div class="form-group">
                        <input name="password" placeholder="{{ 'YENİ ŞİFRENİZ' | translate }}" type="password" value="" class="validate[required]">
                        <ul>
                            <li>
                                <a href="javascript:void(0);" class="res"></a>
                            </li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <input name="password_confirmation" placeholder="{{ 'YENİ ŞİFRENİZ TEKRAR' | translate }}" type="password" value="" class="validate[required]">
                        <ul>
                            <li>
                                <a href="javascript:void(0);" class="res"></a>
                            </li>
                        </ul>
                    </div>
                    <div class="fixedbottom">
                        <div class="linkto">
                            <input type="submit" id="btn-reset-password-save" value="{{ 'UYGULA' | translate }}">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
