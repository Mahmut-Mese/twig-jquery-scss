<script src='https://www.google.com/recaptcha/api.js?hl=tr'></script>
<div class="page searchnone">
    <div class="container-fluid">
        <div class="page-content sab">
            <div class="whitepage">
                <div class="title orange">{{ 'HESABIM / MÜŞTERİ HİZMETLERİ' | translate }}</div>
                <div class="pagecenter othertwo">
                    <div class="form">
                        <span class="text-center">{{ 'NASIL YARDIMCI OLABİLİRİZ' | translate }}</span>
                        <p>{{ 'Lütfen iletşime geçmek istediğiniz konu ile ilgili başlık yazınız.' | translate }}</p>
                        <form id="yeni-ticket-form">
                            <div class="form-group">
                                <input name="name" type="text" placeholder="{{ 'BAŞLIK YAZINIZ' | translate }}*" class="validate[required]" value="">
                             </div>
                            <div class="form-group">
                                <select name="department_id" id="department_id">
                                    <option value="">{{ 'DEPARTMAN SEÇİNİZ' | translate }} *</option>
                                    {% for row in yeni_ticket.departman_list %}
                                        <option value="{{ row.id }}">{{ row.title }}</option>
                                   {% endfor %}

                                </select>
                            </div>
                            <div class="form-group">
                                <select name="department_parent_id" id="department_parent_id">
                                    <option value="">{{ 'DEPARTMAN KONUSU SEÇİNİZ' | translate }} *</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <select name="order_id">
                                    <option value="">{{ 'SİPARİŞE BAĞLI İSE SİPARİŞ SEÇİNİZ' | translate }} *</option>
                                    {% for row in yeni_ticket.siparis_list %}
                                    <option value="{{ row.increment_id }}">{{ row.increment_id }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <textarea class="validate[required]" name="message" placeholder="{{ 'MESAJINIZ' | translate }} *"></textarea>
                            </div>
                            {% if re_captcha.active == true and tf_post_time >= re_captcha.fail_num %}
                                <div class="form-group">
                                    <div class="g-recaptcha" data-sitekey="{{ re_captcha.site_key }}"></div>
                                </div>
                            {% endif %}
                            <div class="note">* {{ 'Yıldızlı alanların girişi zorunludur.' | translate }}</div>
                            <div class="submit">
                                <input type="submit" id="btn-ticket" class="btn-ticket" value="{{ 'GÖNDER' | translate }}">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>